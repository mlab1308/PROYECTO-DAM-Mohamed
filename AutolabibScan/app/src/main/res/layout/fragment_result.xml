<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_found"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_star_empty"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/carLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_transport"
                    android:contentDescription="@string/brand"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/carBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volkswagen"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/plateImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plate"
                    android:contentDescription="@string/plate" />

                <TextView
                    android:id="@+id/plateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0000 ABC"
                    android:textSize="44sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/blue_rounded_card"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/ownersIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_owners"
                        android:contentDescription="@string/owners" />

                    <TextView
                        android:id="@+id/ownersText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Owners"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/blue_rounded_card"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/powerIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_power"
                        android:contentDescription="@string/power" />

                    <TextView
                        android:id="@+id/powerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 CV"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/blue_rounded_card"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/fuelIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_fuel"
                        android:contentDescription="@string/fuel" />

                    <TextView
                        android:id="@+id/fuelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diesel"
                        android:layout_marginTop="8dp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/generalInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_info_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bastidor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bastidor"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/registeringAuthority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registering_authority"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/vehicleClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_class"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/fuelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fuel_type"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/emissionNorm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/emission_norm"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/vehicleAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_age"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/vehicleStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vehicle_status"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
